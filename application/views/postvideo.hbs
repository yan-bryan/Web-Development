<main>
    <form class="post-video-form">
        <div class="input-fields">
            <h2>Post Video</h2>

            <label for="video Title">Video Title</label>
            <input type="text" name="video Title" id="video Title" placeholder="Video Title">

            <input type="file" accept="video/mp4,video/webm,video/ogg">

            <label for="description">Description</label>
            <input type="text" name="description" id="description" placeholder="Description">


        </div>

        <div class="check-boxes">
            <label for="acceptable Use Policy"> <a href="#"> Acceptable Use Policy </a></label>
            <input type="checkbox" name="acceptable Use Policy" id="acceptable Use Policy"
                placeholder="Acceptable Use Policy">

        </div>

        <div class="submit-button">
            <input type="submit" value="Submit">

        </div>

    </form>
</main>
