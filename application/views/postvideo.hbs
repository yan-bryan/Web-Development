<main>
    <form id ="post-video" class="post-video-form" action="/posts/create" method="POST" enctype="multipart/form-data">
        <div class="input-fields">
            <h2>Post Video</h2>

            <label for="video Title">Video Title</label>
            <input type="text" name="title" id="video Title" placeholder="Video Title">

            <input id="video-select" name="uploadVideo" type="file" accept="video/mp4,video/webm,video/ogg" required>

            <label for="description">Description</label>
            <input type="text" name="description" id="description" placeholder="Description" required>


        </div>

        <div class="check-boxes">
            <label for="acceptable Use Policy"> <a href="#"> Acceptable Use Policy </a></label>
            <input type="checkbox" name="acceptable Use Policy" id="acceptable Use Policy"
                placeholder="Acceptable Use Policy" required>

        </div>

        <div class="submit-button">
            <input type="submit" value="Submit">

        </div>

    </form>
</main>
